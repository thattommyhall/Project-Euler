numdict = {"01": "one",
    "02": "two",
    "03": "three",
    "04": "four",
    "05": "five",
    "06": "six",
    "07": "seven",
    "08": "eight",
    "09": "nine",
    "10": "ten",
    "11": "eleven",
    "12": "twelve",
    "13": "thirteen",
    "14": "fourteen",
    "15": "fiveteen",
    "16": "sixteen",
    "17": "seventeen",
    "18": "eighteen",
    "19": "nineteen"
    }

tensdict = {
    "2":"twenty",
    "3":"thirty",
    "4":"forty",
    "5":"fifty",
    "6":"sixty",
    "7":"seventy",
    "8":"eighty",
    "9":"ninety"}

def saynum(number):
    st = str(number)
    if st == "1000":
        return "one thousand"
    if len(st)<=2:
        if numdict.has_key(st):
            return numdict[st]
        if numdict.has_key("0"+st):
            return numdict["0"+st]
        else:
            return tensdict[st[:1]] + "-" + numdict[st["0"+st[1:]]

                        
